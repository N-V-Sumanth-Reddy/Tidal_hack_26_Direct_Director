# Google Gemini API Key (for image generation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Alternative: GOOGLE_API_KEY also works
# GOOGLE_API_KEY=your_gemini_api_key_here

# TAMUS API Configuration (for text generation with GPT-5.2)
# Set to "true" to use TAMUS API for LLM operations
USE_TAMUS_API=true

# TAMUS API Credentials
# Get credentials from your TAMU administrator
TAMUS_API_KEY=
TAMUS_API_URL=https://chat-api.tamu.ai
TAMUS_MODEL=protected.gpt-5.2

# TAMUS API Rate Limiting
# Delay between API calls (in seconds) to avoid rate limiting
TAMUS_API_DELAY=3

# Tavily Search API Key (for web search functionality)
# Get your API key from: https://tavily.com
TAVILY_API_KEY=

# Optional: Google Cloud Project (for advanced features)
# GOOGLE_CLOUD_PROJECT=your_project_id

# Output directories
OUTPUT_DIR=./output
TEMP_DIR=./temp

# Pipeline configuration
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0
ENABLE_HITL_CHECKPOINTS=false
ENABLE_SAFETY_CHECKS=true

# Cost Control & Safety Limits
MAX_IMAGES_PER_RUN=10
MAX_VIDEOS_PER_RUN=10
MAX_API_CALLS_PER_MINUTE=20
ENABLE_COST_TRACKING=true
MAX_COST_PER_RUN_USD=5.0
CACHE_GENERATED_ASSETS=true

# Logging
# Set to "true" to reduce verbose console output
QUIET_MODE=true

# LangGraph Workflow
# Set to "true" to use LangGraph workflow from notebook (exact architecture)
USE_LANGGRAPH=true
